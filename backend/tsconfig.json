{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "types/**/*", "./hardhat/typechain-types"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
