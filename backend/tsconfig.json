{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "types/**/*", "./hardhat/typechain-types"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
